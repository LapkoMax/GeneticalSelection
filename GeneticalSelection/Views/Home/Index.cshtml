@model IEnumerable<KingdomDto>

<h3 class="p-2 bg-primary text-white text-center">Kingdoms</h3>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col font-weight-bold">Name</div>
        <div class="col font-weight-bold">Latin Name</div>
        <div class="col font-weight-bold">Description</div>
    </div>
    <form asp-action="CreateKingdom" method="post">
        <div class="row">
            <div class="col"><input name="Name" class="form-control" /></div>
            <div class="col"><input name="LatinName" class="form-control" /></div>
            <div class="col"><input name="Description" class="form-control" /></div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
    @if (Model.Count() == 0)
    {
        <div class="row">
            <div class="col text-center p-2">No Data</div>
        </div>
    }
    else 
    { 
        @foreach(KingdomDto k in Model) 
        { 
            <div class="row p-2">
                <div class="col">@k.Name</div>
                <div class="col">@k.LatinName</div>
                <div class="col">@k.Description</div>
                <div class="col"></div>
            </div>
        }
    }
</div>
