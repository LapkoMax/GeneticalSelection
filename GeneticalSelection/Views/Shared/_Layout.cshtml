<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>GeneticalSelection</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <style>
            .placeholder { visibility: collapse; display: none }
            .placeholder:only-child { visibility: visible; display: flex }
        </style>
    </head>
    <body>
        <div class="container-fluid">
            <div class="row p-2">
                <div class="col-2">
                    <a asp-controller="Home" asp-action="Index"
                       class="@GetClassForButton("Home")">Home Page</a>
                    <a asp-controller="Manager" asp-action="Index"
                       class="@GetClassForButton("Manager")">Manage Your Data</a>
                </div>
                <div class="col">
                    @RenderBody()
                </div>
            </div>
        </div>
    </body>
</html>

@functions {
    string GetClassForButton(string controller)
    {
        return "btn btn-block " + (ViewContext.RouteData.Values["controller"]
            as string == controller ? "btn-primary" : "btn-outline-primary");
    }
}